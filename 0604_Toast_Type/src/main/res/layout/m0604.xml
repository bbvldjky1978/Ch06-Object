<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:padding="@dimen/p10"
    tools:context=".M0604">

    <Button
        android:id="@+id/m0604_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/p10"
        android:layout_marginTop="@dimen/p10"
        android:layout_marginEnd="@dimen/p10"
        android:background="@android:drawable/btn_default"
        android:text="@string/m0604_b001"
        android:textSize="@dimen/fontsize" />

    <Button
        android:id="@+id/m0604_b002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0604_b001"
        android:layout_alignStart="@+id/m0604_b001"
        android:layout_alignEnd="@+id/m0604_b001"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/p10"
        android:layout_marginEnd="0dp"
        android:background="@android:drawable/btn_default"
        android:text="@string/m0604_b002"
        android:textSize="@dimen/fontsize" />

    <Button
        android:id="@+id/m0604_b003"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0604_b002"
        android:layout_alignStart="@+id/m0604_b002"
        android:layout_alignEnd="@+id/m0604_b002"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/p10"
        android:layout_marginEnd="0dp"
        android:background="@android:drawable/btn_default"
        android:text="@string/m0604_b003"
        android:textSize="@dimen/fontsize" />

    <Button
        android:id="@+id/m0604_b004"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0604_b003"
        android:layout_alignStart="@+id/m0604_b002"
        android:layout_alignEnd="@+id/m0604_b003"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/p10"
        android:layout_marginEnd="0dp"
        android:background="@android:drawable/btn_default"
        android:text="@string/m0604_b004"
        android:textSize="@dimen/fontsize" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="47dp"
        android:text="@string/myname"
        android:textColor="@color/Yellow"
        android:textSize="@dimen/fontsize"
        tools:ignore="TextContrastCheck" />

</RelativeLayout>